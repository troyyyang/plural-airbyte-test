metadata {
  name = "nextcloud"
}

scaffold "terraform" {
  path = "terraform"
  type = "terraform"
}

scaffold "crds" {
  path = "crds"
  type = "crd"
}

scaffold "helm" {
  path = "helm/nextcloud"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "plural"

    args = [
      "wkspace",
      "helm-deps",
    ]

    sha     = "ab73aae372a75c2020abb942ce2ff2822481f188469bbac135cda4d2334c83a6"
    retries = 0
    verbose = false
  }
}
